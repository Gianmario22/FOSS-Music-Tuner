{
  "manifest_version": 3,
  "name": "FOSS Music Tuner",
  "version": "0.1",
  "description": "Free and open source tool to tune your favourite music to various standard tuning frequencies.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
